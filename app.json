{
  "expo": {
    "name": "ankiflow-ai",
    "slug": "ankiflow-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "ankiflowai",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.ankiflowai"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.yourcompany.ankiflowai",
      "permissions": [
        "com.ichi2.anki.permission.READ_WRITE_DATABASE"
      ],
      "intentFilters": [
        {
          "action": "com.ichi2.anki.api.READ_WRITE"
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "requiresCustomBuild": true,
    "extra": {
      "router": {},
      "eas": {
        "projectId": "770dd861-42a5-45a0-a382-2e8386c4333a"
      }
    }
  }
}
